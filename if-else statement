"""grade program:
#include<iostream>
using namespace std;

int main(){
    int marks;
    char Grade;
    
    cout<<"what are your marks?";
    cin>>marks;
    if(marks<25){
        Grade='F';
    }
    else if( marks<=44){
        Grade='E';
    }
    else if(marks<= 49){
        Grade = 'D';
    }
    else if(marks<= 59){
        Grade='C';
    }
    else if(marks<=69){
        Grade='B';
    }
    else if(marks>=70){
        Grade = 'A';
    }else{
        Grade = 'X';
    }
    cout<<"Grade: "<<Grade<<endl;

    return 0;
}
"""
POSITIVE NEGATIVE 
#include<iostream>
using namespace std;
int main(){
    int n;
    cin>>n;
    if(n>0){
        cout<<"POSITIVE NUM";
    }
    else if(n<0){
        cout<<"NEGATIVE NUM";
    }
    else{
        cout<<"ZERO";
    }
    return 0;
}

CHECK VALIDITY OF A TRIANGLE
#include<iostream>
using namespace std;
int main(){
    int a,b,c;
    cout<<"enter the three sides of triangle: ";
    cin>>a>>b>>c;
    if(a+b>c || b+c>a || c+a>b){
        cout<<"Valid triangle ";
    }
    else{
        cout<<"invalid";
    }
    return 0;
}
